@page
@model LTPR.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h4>Log in</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LogonInput.Email" class="control-label"></label>
                <input asp-for="LogonInput.Email" class="form-control" value="@Model.email" />
                <span asp-validation-for="LogonInput.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogonInput.Password" class="control-label"></label>
                <input asp-for="LogonInput.Password" class="form-control" />
                <span asp-validation-for="LogonInput.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-r" />
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>