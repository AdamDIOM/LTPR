@page
@model LTPR.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11">
        <h4>Sign in or Register</h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h4>Create an Account</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegInput.Email" class="control-label"></label>
                <input asp-for="RegInput.Email" class="form-control" value="@Model.email" />
                <span asp-validation-for="RegInput.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegInput.Password" class="control-label"></label>
                <input asp-for="RegInput.Password" class="form-control" />
                <span asp-validation-for="RegInput.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegInput.ConfirmPassword" class="control-label"></label>
                <input asp-for="RegInput.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegInput.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-r" />
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>