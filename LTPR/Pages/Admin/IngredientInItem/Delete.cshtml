@page
@model LTPR.Pages.Admin.IngredientInItem.DeleteModel

@{
    ViewData["Title"] = "Ingredient in Menu Item Delete - Admin Data Editor";
}

<h1>Remove Ingredient from Menu Item</h1>

<h3>Are you sure you want to remove this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Menu Item
        </dt>
        <dd class="col-sm-10">
            @{
                // gets information about the menu item by id
                var foundId = -1;
                @for (int i = 0; i < Model.tblMenuItem.Count(); i++)
                {
                    if (Model.tblIngredientInItem.MIID == Model.tblMenuItem[i].ID)
                    {
                        foundId = i;
                    }
                }
                if (foundId == -1)
                {
                    @Html.DisplayFor(modelItem => Model.tblIngredientInItem.MIID)
                }
                else
                {
                    @Html.DisplayFor(modelItem => Model.tblMenuItem[foundId].Name)
                }
            }
        </dd>
        <dt class="col-sm-2">
            Ingredient
        </dt>
        <dd class="col-sm-10">
            @{
                // gets more information about the ingredient by id
                foundId = -1;
                @for (int i = 0; i < Model.tblIngredients.Count(); i++)
                {
                    if (Model.tblIngredientInItem.IID == Model.tblIngredients[i].ID)
                    {
                        foundId = i;
                    }
                }
                if (foundId == -1)
                {
                    @Html.DisplayFor(modelItem => Model.tblIngredientInItem.IID)
                }
                else
                {
                    @Html.DisplayFor(modelItem => Model.tblIngredients[foundId].Name)
                }
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="tblIngredientInItem.ID" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
