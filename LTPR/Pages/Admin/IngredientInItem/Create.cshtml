@page
@model LTPR.Pages.Admin.IngredientInItem.CreateModel

@{
    ViewData["Title"] = "Ingredient in Menu Item Create - Admin Data Editor";
}

<h1>Add Ingredient to Menu Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tblIngredientInItem.MIID" class="control-label">Menu Item</label>
                <select asp-for="tblIngredientInItem.MIID" class="form-control">
                    @foreach(var item in Model.tblMenuItem)
                    {
                        <option value=@item.ID>@item.Name</option>
                    }
                </select>
                <span asp-validation-for="tblIngredientInItem.MIID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tblIngredientInItem.IID" class="control-label">Ingredient</label>
                <select asp-for="tblIngredientInItem.IID" class="form-control">
                    @foreach(var ingredient in Model.tblIngredients)
                    {
                        <option value=@ingredient.ID>@ingredient.Name</option>
                    }
                </select>
                <span asp-validation-for="tblIngredientInItem.IID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
