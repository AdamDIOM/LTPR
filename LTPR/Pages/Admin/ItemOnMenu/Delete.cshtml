@page
@model LTPR.Pages.Admin.ItemOnMenu.DeleteModel

@{
    ViewData["Title"] = "Item on Menu Delete - Admin Data Editor";
}

<h1>Remove Item from Menu</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Menu
        </dt>
        <dd class="col-sm-10">
            @{
                var foundId = -1;
                @for (int i = 0; i < Model.tblMenus.Count(); i++)
                {
                    if (Model.tblItemOnMenu.MID == Model.tblMenus[i].ID)
                    {
                        foundId = i;
                    }
                }
                if (foundId == -1)
                {
                    @Html.DisplayFor(modelItem => Model.tblItemOnMenu.MID)
                }
                else
                {
                    @Html.DisplayFor(modelItem => Model.tblMenus[foundId].Name)
                }
            }
        </dd>
        <dt class="col-sm-2">
            Item
        </dt>
        <dd class="col-sm-10">
            @{
                foundId = -1;
                @for (int i = 0; i < Model.tblMenuItem.Count(); i++)
                {
                    if (Model.tblItemOnMenu.IID == Model.tblMenuItem[i].ID)
                    {
                        foundId = i;
                    }
                }
                if (foundId == -1)
                {
                    @Html.DisplayFor(modelItem => Model.tblItemOnMenu.IID)
                }
                else
                {
                    @Html.DisplayFor(modelItem => Model.tblMenuItem[foundId].Name)
                }
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="tblItemOnMenu.ID" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
