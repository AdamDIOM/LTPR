@page
@model LTPR.Pages.Admin.MenuItem.IndexModel

@{
    ViewData["Title"] = "Menu Item Index - Admin Data Editor";
}

<h1>Menu Item Index - Admin Data Editor</h1>

<p>
    <a asp-page="Create">Create New Menu Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tblMenuItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblMenuItem[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblMenuItem[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.tblMenuItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="../Index">Back to List</a>
</div>