@page
@model LTPR.Pages.Admin.MenuAtRestaurant.CreateModel

@{
    ViewData["Title"] = "Menu at Restaurants Create - Admin Data Editor";
}

<h1>Add Menu to Restaurant</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tblMenuAtRestaurant.RID" class="control-label">Restaurant</label>
                <select asp-for="tblMenuAtRestaurant.RID" class="form-control">
                    @foreach(var restaurant in Model.tblRestaurants)
                    {
                        <option value=@restaurant.ID>@restaurant.Name</option>
                    }
                </select>
                <span asp-validation-for="tblMenuAtRestaurant.RID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tblMenuAtRestaurant.MID" class="control-label">Menu</label>
                <select asp-for="tblMenuAtRestaurant.MID" class="form-control">
                    @foreach(var menu in Model.tblMenus)
                    {
                        // adds option for each menu to the selector
                        <option value=@menu.ID>@menu.Name</option>
                    }
                </select>
                <span asp-validation-for="tblMenuAtRestaurant.MID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
