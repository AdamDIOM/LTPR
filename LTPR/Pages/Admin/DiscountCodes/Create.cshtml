@page
@model LTPR.Pages.Admin.DiscountCodes.CreateModel

@{
    ViewData["Title"] = "Discount Codes Create - Admin Data Editor";
}

<h1>Create Discount Code</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tblDiscountCodes.DiscountCode" class="control-label"></label>
                <input asp-for="tblDiscountCodes.DiscountCode" class="form-control" />
                <span asp-validation-for="tblDiscountCodes.DiscountCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tblDiscountCodes.DiscountAmount" class="control-label"></label>
                <input asp-for="tblDiscountCodes.DiscountAmount" class="form-control" />
                <span asp-validation-for="tblDiscountCodes.DiscountAmount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="tblDiscountCodes.IsPercentage" /> @Html.DisplayNameFor(model => model.tblDiscountCodes.IsPercentage)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
