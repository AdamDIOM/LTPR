@page
@model LTPR.Pages.Admin.Restaurants.DetailsModel

@{
    ViewData["Title"] = "Restaurants Details - Admin Data Editor";
}

<h1>Restaurant Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tblRestaurants.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tblRestaurants.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tblRestaurants.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tblRestaurants.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tblRestaurants.PhoneNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tblRestaurants.PhoneNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tblRestaurants.Delivers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tblRestaurants.Delivers)
        </dd>
    </dl>
    <hr />
    <h4>Menus</h4>
    <dl>
        @foreach(var menu in Model.tblMenus)
        {
            foreach(var mar in Model.tblMenuAtRestaurant)
            {
                if(mar.RID == Model.tblRestaurants.ID && mar.MID == menu.ID)
                {
                    <dt>
                        @Html.DisplayFor(modelItem => menu.Name)
                    </dt>
                }
            }
        }
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.tblRestaurants?.ID">Edit Restaurant</a> |
    <a asp-page="./Index">Back to List</a>
</div>
