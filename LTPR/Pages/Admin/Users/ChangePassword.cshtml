@page
@model LTPR.Pages.Admin.Users.ChangePasswordModel

@{
    ViewData["Title"] = "Change User Password - Admin Data Editor";
}

<h1>Change Password</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            UserName
        </dt>
        <dd class="col-sm-10">
            @Model.user
        </dd>
    </dl>
    
    <form method="post">
        <div class="form-group">
            <label asp-for="Pass" class="control-label"></label>
            <input asp-for="Pass" class="form-control" />
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>
        <input type="submit" value="Change" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
