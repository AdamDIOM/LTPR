@page
@model LTPR.Pages.Admin.Images.DeleteModel

@{
    ViewData["Title"] = "Images Delete - Admin Data Editor";
}

<h1>Delete Image</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-12">
            @try
            {
                <img class="med-image" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(@Model.tblImages.ImageData))" alt="@Model.tblImages.ImageDescription" />
            }
            catch
            {
                <img class="img-thumb" src="/img/no-image.png" alt="no image available" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tblImages.ImageDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tblImages.ImageDescription)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="tblImages.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
