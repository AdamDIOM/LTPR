@page
@model LTPR.Pages.Admin.Images.DetailsModel

@{
    ViewData["Title"] = "Images Details - Admin Data Editor";
}

<h1>Image Details</h1>

<div>
    <hr />
    <dl class="row">
        
        <dd class="col-sm-12">
            @try
            {
                <img class="large-image" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(@Model.tblImages.ImageData))" alt="@Model.tblImages.ImageDescription" />
            }
            catch
            {
                <img class="img-thumb" src="/img/no-image.png" alt="no image available" />
            }
        </dd>
        <dt class="col-sm-2">
            Image Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tblImages.ImageDescription)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.tblImages?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
