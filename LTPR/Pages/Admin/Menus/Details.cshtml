@page
@model LTPR.Pages.Admin.Menus.DetailsModel

@{
    ViewData["Title"] = "Menus Details - Admin Data Editor";
}

<h1>Menu Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tblMenus.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tblMenus.Name)
        </dd>
    </dl>
    <hr />
    <h4>Items</h4>
    <dl>
        @foreach (var item in Model.tblMenuItem)
        {
            foreach (var iom in Model.tblItemOnMenu)
            {
                if (iom.MID == Model.tblMenus.ID && iom.IID == item.ID)
                {
                    <dt>
                        @Html.DisplayFor(modelItem => item.Name)
                    </dt>
                }
            }
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.tblMenus?.ID">Edit Menu</a> |
    <a asp-page="./Index">Back to List</a>
</div>
